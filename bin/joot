#!/usr/bin/perl

use strict;
use warnings;

use Joot;
use Getopt::Long;

my $VERSION = "0.0.1";

Getopt::Long::Configure(qw(auto_abbrev pass_through));
# collect global variables
my %options;
GetOptions( 
    \%options,
    "version" => sub { print "$0 version $VERSION\n"; exit },
    "verbose",
    "config_file=s"
);

# action must be exactly one of these
Getopt::Long::Configure('no_pass_through');
my %action;
GetOptions( \%action, 
    "create",
    "images",
    "list",
    "delete",
    "rename",
);


my $joot = Joot->new( \%options );
if ( keys %action == 0 ) { 
    die usage( "Invalid or missing command" ) if ( @ARGV != 1 );
    $joot->chroot( $ARGV[0] );
    exit;
} elsif ( keys %action != 1 ) {
    die usage( "You can't use commands \"". join(" ", keys %action) . "\" at the same time" );
}

my $action = (keys %action)[0];
my $ret = $joot->$action( @ARGV );

#TODO
use Data::Dumper;
print Dumper $ret;

sub usage {
    my $message = join( "\n", @_ );
    $message .= "\n" if $message;
    return <<EOM
${message}Usage: 
    $0 <joot name> 
    $0 --create <name> <image>
    $0 --images <source urls>
    $0 --list 
    $0 --delete <image>
    $0 --rename <old name> <new name>

Global options:
    --config <config file>
    --verbose 
    --version

EOM

}
